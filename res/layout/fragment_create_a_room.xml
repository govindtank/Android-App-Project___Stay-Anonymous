<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_mask"
    >
    <ImageView 
        android:id="@+id/text_create_a_room"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/text_create_a_room"
        />
    
  <!--   <ImageView 
        android:id="@+id/text_room_id"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/text_room_id"
        android:layout_weight="1"
        /> -->
    
    <EditText
        android:id="@+id/textfield_room_title"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/text_create_a_room"
        android:textColorHint="#aaaaff"
        android:textColor="#ffffff"
        android:hint="Room's title?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/textfield"
        />
    
     
    <EditText
        android:id="@+id/textfield_room_description"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/textfield_room_title"
        android:textColorHint="#aaaaff"
        android:textColor="#ffffff"
        android:hint="Any detail?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/textfield"
        />
    
    
    <ImageButton 
        android:id="@+id/button_create_room"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/textfield_room_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_create_room"
        />
    
    <ImageView 
        android:id="@+id/text_swipe_left"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
  		android:src="@drawable/text_swipe_right_to_enter_a_room"
        />
    

</RelativeLayout>
